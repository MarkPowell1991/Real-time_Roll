<UserControl x:Class="Tab_Lab__2nd_Attempt_.ControlPanels.PianoRoll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tab_Lab__2nd_Attempt_.ControlPanels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <ScrollViewer x:Name="scrollViewer1" HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto">
        <Grid>
            <Button x:Name="button_1" Content="Button" Canvas.Left="27" Canvas.Top="24" Width="75" Click="button_1_Click"/>
        
        <Canvas x:Name="rootCanvas" Background="White">
            <Canvas x:Name="noteBackgroundCanvas" Width="Auto">
                <Canvas.RenderTransform>
                    <ScaleTransform x:Name="noteScaleTransform"
                                ScaleX="1" ScaleY="1"/>
                </Canvas.RenderTransform>
            </Canvas>
            <Canvas x:Name="gridCanvas"/>
            <Canvas x:Name="NoteCanvas"/>
            
        </Canvas>
        </Grid>
    </ScrollViewer>
</UserControl>
